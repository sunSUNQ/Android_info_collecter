<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14pt"
                    android:orientation="vertical">

                <TextView android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_column="0"
                          android:layout_marginTop="2pt"
                          android:textSize="10pt"
                          android:textColor="#0e0e0a"
                          android:text="系统信息收集"
                          android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90pt"
                    android:orientation="vertical" android:visibility="visible">


                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5pt"

                        android:background="@android:color/background_dark" android:visibility="visible">
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="SDk版本信息： "
                                  android:gravity="center"/>

                        <TextView android:id="@+id/sdk_version"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="Release版本："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/release_version"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="平台信息："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/hardware"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="硬件制造商："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/manufacturer"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="指令集："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/CPU_ABI"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="最近安全补丁："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/security_patch"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="内核版本："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/os_version"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                        <TextView android:layout_weight="1"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_column="0"
                                  android:text="OpenGL版本："
                                  android:gravity="center"/>

                        <TextView android:id="@+id/opengl_version"
                                  android:layout_weight="2"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:layout_column="1"
                                  android:gravity="center"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140pt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="1dp"
                android:paddingBottom="1dp" android:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14pt"
                    android:orientation="vertical">

                <TextView android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_column="0"
                          android:layout_marginTop="2pt"
                          android:textSize="10pt"
                          android:textColor="#0e0e0a"
                          android:text="APP信息列表"
                          android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


            <ScrollView

                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scrollbarStyle="outsideOverlay"
                    style="@android:style/Widget.DeviceDefault.Light.ScrollView">

                <TextView
                        android:id="@+id/sysinfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="系统信息"/>
            </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="1dp"
                android:paddingBottom="1dp" android:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14pt"
                    android:orientation="vertical">

                <TextView android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_column="0"
                          android:layout_marginTop="1pt"
                          android:textSize="10pt"
                          android:textColor="#0e0e0a"
                          android:text="进程信息列表"
                          android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">


                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scrollbarStyle="outsideOverlay"
                        style="@android:style/Widget.DeviceDefault.Light.ScrollView">

                    <TextView
                            android:id="@+id/processinfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:text="系统信息"/>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

